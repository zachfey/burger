<style media="screen">
    li {
        height: 100px;
        width: 100px;
        color: red;
        background-color: purple;
        margin-bottom: 30px;
    }
</style>
<div class='container'>
    <h1>Eat Da Burger</h1>

    <div class='row'>

        <div class='container col-5'>
            <h4>Available Burgers</h4>
            {{#each availBurgs }}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{id}}. {{burger_name}}
                        <button class='btn btn-primary devour' id={{id}}>Devour It!</button>
                    </h5>

                </div>
            </div>
            {{/each}}
        </div>
        <div class='container col-2'></div>
        <div class='container col-5'>
            <h4>Devoured Burgers</h4>
            {{#each eatenBurgs }}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{id}}. {{burger_name}}
                        <button class='btn btn-danger delete' id={{id}}>Delete</button>
                    </h5>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class='row'>
        <div class='container col-12'>

            <form >
                <div class="form-group">
                    <label for="burgerName">New Burger</label>
                    <input type="text" class="form-control" id="burgerName" aria-describedby="burgerName"
                        placeholder="Enter a new burger to eat">
                </div>
                    <button class='btn btn-primary' id = 'newBurger' type="submit">Submit</button>
                    <p>Enter a burger you want to eat, then hit 'Submit'</p>
                </form>
        </div>
    </div>
</div>